      "src/**/test.tsx"
    ],
    "extensions": [
      "tsx"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "peerDependencies": {
    "@types/react": ">=16.8.0",
    "react": ">=16.8.0"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "store": "^2.0.12"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.0",
    "@testing-library/react-hooks": "^1.0.4",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.3",
    "ava": "^2.2.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "rollup": "^1.7.0",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-typescript2": "^0.20.1",
    "ts-node": "^8.0.3",
    "typescript": "^3.5.3"
  }
